with(plots);
with(plottools);

plotsetup(ps, plotoutput=`plot.ps`, plotoptions=`portrait,noborder`);

f:=(exp(-((x+1.5)^2 + (y-1.5)^2)) + exp(-((x-1.5)^2 + (y+1.5)^2)))/(2*Pi);

F:=plot3d(f, x=-4..4, y=-4..4, grid=[100,100], axes=frame, orientation=[15,45], style=wireframe);
G:=line([4,4,0], [-4,-4,0], color="Red", linestyle=solid, thickness=5); 

display({G,F});


